{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bin": {
    "stack": "dist/cli.js"
  },
  "bugs": "https://github.com/Shuunen/stack/issues",
  "dependencies": {
    "@deanc/esbuild-plugin-postcss": "1.0.1",
    "@types/node": "15.12.4",
    "@types/assert": "1.5.4",
    "@types/jsonfile": "6.0.0",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "assert": "2.0.0",
    "chokidar": "3.5.2",
    "colorette": "1.2.2",
    "esbuild": "0.12.9",
    "eslint": "7.29.0",
    "eslint-plugin-html": "6.1.2",
    "eslint-plugin-mocha": "9.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-unicorn": "33.0.1",
    "jsonfile": "6.1.0",
    "mocha": "9.0.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "repo-check": "1.18.0",
    "servor": "4.0.2",
    "shuutils": "4.6.1",
    "tailwindcss": "2.2.4",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  },
  "description": "A cli to help me build web things, all in one",
  "files": [
    "dist",
    ".eslintrc.json"
  ],
  "homepage": "https://github.com/Shuunen/stack",
  "keywords": [
    "cli",
    "web"
  ],
  "license": "GPL-3.0",
  "main": "dist/cli.js",
  "name": "shuunen-stack",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shuunen/stack.git"
  },
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --minify --outfile=dist/cli.js --platform=node --target=node14 --external:tailwindcss --external:esbuild --metafile=meta.json",
    "check": "repo-check",
    "ci": "run-s build lint check test",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.ts,.html .",
    "postversion": "git push && git push --tags && npm run build && npm publish",
    "prebuild": "rm dist -rf",
    "preversion": "npm run ci",
    "start": "ts-node --transpile-only src/cli.ts",
    "test": "echo no tests yet",
    "update": "npx npm-check-updates -u"
  },
  "version": "0.9.6"
}
